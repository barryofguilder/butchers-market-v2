<form class="m-0" {{action "submit" on="submit"}} ...attributes>
  {{yield
    (
      hash
        group=(component "admin/components/admin-form/group" readOnly=this.readonly)
        label=(component "admin/components/admin-form/label")
        submit=(
          component
            "button"
            data-test-id="submit-btn"
            task=this.submitTask
            type="submit"
            variant="primary"
        )
    )
  }}
</form>