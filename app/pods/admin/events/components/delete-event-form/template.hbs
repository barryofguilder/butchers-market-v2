<ModalDialog as |Modal|>
  <Modal.header>
    Delete Event?
  </Modal.header>
  <Admin::Components::AdminForm class="max-w-xl" @onSubmit={{perform this.deleteEvent}} as |Form|>
    <Modal.body>
      {{#if this.errorMessage}}
        <UiAlert data-test-id="server-error" @variant="danger">
          {{this.errorMessage}}
        </UiAlert>
      {{/if}}

      <p class="mb-8">
        Do you really want to delete this event?
      </p>

      <Form.group data-test-id="title" as |Group|>
        <Group.label>Title</Group.label>
        <Group.readonly @value={{@event.title}} />
      </Form.group>

      <Form.group data-test-id="lead-in" as |Group|>
        <Group.label>Lead In</Group.label>
        <Group.readonly @value={{@event.leadIn}} />
      </Form.group>

      <Form.group data-test-id="start-time" as |Group|>
        <Group.label>Start Time</Group.label>
        <p>{{date-format @event.startTime "EEEE do yyyy"}}</p>
      </Form.group>

      <Form.group data-test-id="end-time" as |Group|>
        <Group.label>End Time</Group.label>
        <p>{{date-format @event.endTime "h:mma"}}</p>
      </Form.group>
    </Modal.body>
    <Modal.footer>
      <Button @variant="plain" @onClick={{action @onCancel}}>
        No
      </Button>
      <Form.submit class="ml-2" @disabled={{if this.deleteEvent.isRunning true false}}>
        Yes
      </Form.submit>
    </Modal.footer>
  </Admin::Components::AdminForm>
</ModalDialog>