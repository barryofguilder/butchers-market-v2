<PromoSection @image="promo-cafe.jpg" as |Promo|>
  <div class="flex flex-col lg:flex-row">
    <div class="w-full lg:w-1/2 text-center lg:text-left">
      {{#if this.isDesktop}}
        <Promo.title>
          Welcome to The Blues Street Cafe
        </Promo.title>
        <Promo.subtitle>
          Finger Lickin'. Guitar Pickin'.
        </Promo.subtitle>
      {{else}}
        <StoreHours class="pt-16" @hours={{this.model.hours}} @hourType="Cafe" />
        <StoreHours class="mt-8" @hours={{this.model.hours}} @hourType="Store" />
        <StoreLocation class="mt-8" />
      {{/if}}

      <a
        href="https://www.facebook.com/thebutchersmarket"
        class="mt-8 inline-block no-underline bg-grey-darkest hover:bg-black text-white uppercase text-xl font-bold px-6 py-3"
      >
        Like us on Facebook
      </a>

      {{#if this.isDesktop}}
        <StoreHours class="mt-8" @hours={{this.model.hours}} @hourType="Cafe" />
        <StoreHours class="mt-8" @hours={{this.model.hours}} @hourType="Store" />
        <StoreLocation class="mt-8" />
      {{/if}}
    </div>

    {{#if this.isDesktop}}
      <div class="w-1/2 lg:relative">
        <IphoneCarousel as |Slide|>
          <Slide @src="images/iPhone-loyalty-club-3.jpg" @alt="Loyalty Club punch card" @active={{true}} />
          <Slide @src="images/iPhone-loyalty-club-2.jpg" @alt="Loyalty Club discount" />
          <Slide @src="images/iPhone-mobile-app.jpg" @alt="Butchers Market mobile app" />
        </IphoneCarousel>
      </div>
    {{else}}
      <MobileApp class="mt-8" />
    {{/if}}
  </div>
</PromoSection>

