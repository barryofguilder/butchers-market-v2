<PromoSection @image="promo-cafe.jpg" as |Promo|>
  <Container>
    <div class="text-center sm:text-left lg:w-2/3">
      {{#if this.media.isSm}}
        <Promo.title>
          Welcome to The Butcher's Market Cafe
        </Promo.title>
        <Promo.subtitle>
          Finger Lickin'. Guitar Pickin'.
        </Promo.subtitle>
      {{else}}
        <StoreHours class="mt-8" @hours={{this.model.hours}} @hourType="Cafe" />
        <StoreHours @hours={{this.model.hours}} @hourType="Store" />
        <StoreLocation class="mt-8" />
      {{/if}}

      <Button @href="https://www.facebook.com/thebutchersmarket" @variant="primary" class="mt-8">
        Like us on Facebook
      </Button>

      {{#if this.media.isSm}}
        <StoreHours class="mt-8" @hours={{this.model.hours}} @hourType="Cafe" />
        <StoreHours class="mt-8" @hours={{this.model.hours}} @hourType="Store" />
        <StoreLocation class="mt-8" />
      {{/if}}
    </div>
  </Container>
</PromoSection>

<section id="events">
  <HeaderTitle @title="Events" />

  <Container>
    {{#if (gt this.sortedEvents.length 0)}}
      <EventList @events={{this.sortedEvents}} />
    {{else}}
      <p class="mt-8 text-lg text-gray-700 sm:text-xl">
        Check out the events on our
        <a
          class="text-red-800 hover:underline"
          href="https://www.facebook.com/pg/thebutchersmarket/events/"
        >
          Facebook page
        </a>.
      </p>
    {{/if}}
  </Container>
</section>

<section>
  <HeaderTitle @title="Past Performances" />

  <Container>
    <div class="mt-10 md:flex md:flex-wrap md:-mx-3">
      {{#each this.filteredPerformances as |performance|}}
        <div class="mt-6 md:px-3 md:w-1/2 lg:w-1/3">
          <ResponsiveVideo @url={{performance.embedLink}} />
        </div>
      {{/each}}
      <div class="mt-6 md:px-3 md:w-1/2 lg:w-1/3">
        <Button
          @href="https://www.youtube.com/playlist?list=PLaUocYlB3j2hIoFGQDlkAwtAE7KcxzhFV"
        >
          More Videos
        </Button>
      </div>
    </div>
  </Container>
</section>

<section>
  <HeaderTitle @title="Customer Reviews" />

  <Container>
    <ReviewsList @reviews={{this.model.reviews}} />
  </Container>
</section>

<BookingSection class="mt-16 sm:mt-32" />
