<PromoSection @image="promo-deli.jpg" as |Promo|>
  <div class="text-center lg:text-left">
    <Promo.title>
      Fresh Made Everything!
    </Promo.title>
    <Promo.subtitle>
      Everything in our deli is made in-house from scratch to achieve a quality and freshness like no other store can provide.
    </Promo.subtitle>
  </div>

  <div class="boars-head">
    <div class="boars-head-logo"></div>
    {{#unless this.media.isMd}}
      <div class="boars-head-meat"></div>
    {{/unless}}
  </div>
</PromoSection>

<section>
  <div class="container">
    <HeaderTitle @title="Everyday Deli Items" />

    {{#each (grouped-each cardColumns model.items) as |row|}}
      <div class="row">
        {{#each row as |item|}}
          <div class="col-sm-6 col-md-3">
            <div class="card card-plain">
              <img
                class="card-img-top w-100"
                src="images/{{item.image}}"
                alt="Image of {{item.title}}"
              >
              <div class="card-block">
                <h4 class="card-title deli-item-title">{{item.title}}</h4>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{/each}}

    <HeaderTitle @title="Party Platters" />
    <div class="row">
      <div class="col-sm-6 col-md-3">
        <div class="card card-plain">
          <img
            class="card-img-top w-100"
            src="images/sandwich-platter.jpg"
            alt="Image of Sandwich Platters"
          >
          <div class="card-block">
            <h4 class="card-title deli-item-title">Sandwich Platters</h4>
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-md-3">
        <div class="card card-plain">
          <img
            class="card-img-top w-100"
            src="images/meat-cheese-platter.jpg"
            alt="Image of Meat &amp; Cheese Platters"
          >
          <div class="card-block">
            <h4 class="card-title deli-item-title">Meat &amp; Cheese Platters</h4>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-md-6 deli-platters-col">
        <a class="btn btn-secondary btn-lg" href="docs/bmpartyplatters.pdf">View All Platters</a>
      </div>
    </div>
  </div>
</section>
