<ul class="list-reset flex flex-col lg:flex-row">
  <li>
    <LinkTo
      @route="meat"
      class="block px-6 py-4 lg:py-8 hover:text-red-600 text-center lg:text-left"
      {{on "click" this.itemClicked}}
    >
      Meat
    </LinkTo>
  </li>
  <li>
    <LinkTo
      @route="deli"
      class="block px-6 py-4 lg:py-8 hover:text-red-600 text-center lg:text-left"
      {{on "click" this.itemClicked}}
    >
      Deli
    </LinkTo>
  </li>
  <li>
    <BasicDropdown @renderInPlace={{if this.isMobile true false}} as |dd|>
      <dd.trigger
        class="block px-6 py-4 lg:py-8 outline-none hover:text-red-600 focus:bg-gray-300 focus:text-gray-900 text-center lg:text-left"
      >
        Dining <FaIcon @icon="caret-down" />
      </dd.trigger>

      <dd.content @class={{if this.isMobile "static"}}>
        <div class="bg-gray-200 text-center lg:text-left lg:shadow-md">
          <ul class="list-reset">
            <li>
              <a
                href="docs/bmmenu.pdf"
                class="block px-6 py-4 hover:text-red-600"
              >
                View Menu
              </a>
            </li>
            <li>
              <LinkTo
                @route="events"
                class="block px-6 py-4 hover:text-red-600"
                {{on "click" this.itemClicked}}
              >
                Butcher's Market Cafe
              </LinkTo>
            </li>
          </ul>
        </div>
      </dd.content>
    </BasicDropdown>
  </li>
  <li>
    <LinkTo
      @route="events"
      class="block px-6 py-4 lg:py-8 hover:text-red-600 text-center lg:text-left"
      {{on "click" this.itemClicked}}
    >
      Events
    </LinkTo>
  </li>
  <li>
    <LinkTo
      @route="contact"
      class="block px-6 py-4 lg:py-8 hover:text-red-600 text-center lg:text-left"
      {{on "click" this.itemClicked}}
    >
      Contact
    </LinkTo>
  </li>
</ul>