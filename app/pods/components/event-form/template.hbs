<ModalDialog as |Modal|>
  <Modal.header @close={{action "close"}}>
    {{dialogTitle}}
  </Modal.header>
  <Modal.body>
    {{#if errorMessage}}
      <div class="alert alert-danger">
        {{errorMessage}}
      </div>
    {{/if}}
    <p class="form-info">
      <strong>Note:</strong> Required fields are marked with an {{required-field}}
    </p>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label" for="event-title">
        Title <RequiredField />
      </label>
      <div class="col-sm-9">
        <ValidatedField @changeset={{changeset}} @propertyName="title" as |isInvalidClass|>
          {{input class=(concat "form-control " isInvalidClass) id="event-title" value=changeset.title}}
        </ValidatedField>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label" for="event-lead-in">
        Lead In
      </label>
      <div class="col-sm-9">
        <ValidatedField @changeset={{changeset}} @propertyName="leadIn" as |isInvalidClass|>
          {{input class=(concat "form-control " isInvalidClass) id="event-lead-in" value=changeset.leadIn}}
        </ValidatedField>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label">
        Date <RequiredField />
      </label>
      <div class="col-sm-9">
        <EmberFlatpickr
          class="form-control"
          @disableMobile={{true}}
          @allowInput={{false}}
          @appendDataInput={{true}}
          @date={{readonly changeset.startTime}}
          @dateFormat="m/d/Y"
          @onChange={{action "dateSelected"}}
        />
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label">
        Start Time <RequiredField />
      </label>
      <div class="col-sm-9">
        <EmberFlatpickr
          class="form-control"
          @disableMobile={{true}}
          @date={{readonly changeset.startTime}}
          @enableTime={{true}}
          @noCalendar={{true}}
          @time_24hr={{false}}
          @dateFormat="h:i K"
          @onChange={{action "startTimeSelected"}}
        />
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label">
        End Time <RequiredField />
      </label>
      <div class="col-sm-9">
        <EmberFlatpickr
          @class="form-control"
          @disableMobile={{true}}
          @date={{readonly changeset.endTime}}
          @enableTime={{true}}
          @noCalendar={{true}}
          @time_24hr={{false}}
          @dateFormat="h:i K"
          @onChange={{action "endTimeSelected"}}
        />
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-3 col-form-label" for="event-link">
        Link
      </label>
      <div class="col-sm-9">
        <ValidatedField @changeset={{changeset}} @propertyName="link" as |isInvalidClass|>
          {{input class=(concat "form-control " isInvalidClass) id="event-link" value=changeset.link}}
        </ValidatedField>
      </div>
    </div>
  </Modal.body>
  <Modal.footer>
    <button type="button" class="btn btn-secondary" {{action "close"}}>Cancel</button>
    <TaskButton class="btn btn-primary" @task={{saveEvent}} @disabled={{saveDisabled}}>
      Save
    </TaskButton>
  </Modal.footer>
</ModalDialog>
