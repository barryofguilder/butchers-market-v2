{{#if @href}}
  <a
    data-test-id={{this.data-test-id}}
    href={{@href}}
    class={{this.buttonClasses}}
    ...attributes
  >
    {{#if @icon}}
      <UiIcon
        data-test-id="button-icon"
        @icon={{@icon}}
        @iconPrefix={{@iconPrefix}}
        @variant={{if @iconOnly this.iconOnlyVariant "inherit"}}
      />
    {{/if}}

    {{yield}}
  </a>
{{else}}
  <button
    data-test-id={{this.data-test-id}}
    class={{this.buttonClasses}}
    type={{this.type}}
    disabled={{@disabled}}
    {{on "click" this.click}}
    ...attributes
  >
    {{#if @icon}}
      <UiIcon
        data-test-id="button-icon"
        @icon={{@icon}}
        @iconPrefix={{@iconPrefix}}
        @variant={{if @iconOnly this.iconOnlyVariant "inherit"}}
      />
    {{/if}}

    {{yield}}
  </button>
{{/if}}
