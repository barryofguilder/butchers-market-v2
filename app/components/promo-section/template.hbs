<div class="container">
  <div class="row clearfix">
    <div class="col-lg-6">
      {{#if isDesktop}}
        <h1 class="promo-title">Welcome to The Butcher's Market<br>Meat &amp; Deli</h1>
        <p class="lead large">Small town service. Big city selection.</p>
      {{/if}}
      {{#if notDesktop}}
        {{store-hours}}
      {{/if}}
      <a href="https://www.facebook.com/thebutchersmarket" class="btn btn-secondary">Like us on Facebook</a>
      {{#if isDesktop}}
        {{store-hours}}
      {{/if}}
    </div>
    {{#if isDesktop}}
      <div class="col-lg-6">
        {{iphone-carousel}}
      </div>
    {{/if}}
    {{#if notDesktop}}
      <div class="col-lg-6">
        <ul class="list-inline mobile-app-downloads">
          <li class="list-inline-item">
            <a href="#">
              <img src="images/app-store.png" alt="iOS app store" width="150px" height="45px">
            </a>
          </li>
          <li class="list-inline-item">
            <a href="#">
              <img src="images/google-play.png" alt="Android app" width="150px" height="45px">
            </a>
          </li>
        </ul>
      </div>
    {{/if}}
  </div>
</div>
