{{#promo-section class="butcher-promo-index"}}
  <div class="row clearfix">
    <div class="col-lg-6">
      {{#if isDesktop}}
        <h1 class="promo-title">Welcome to The Butcher's Market<br>Meat &amp; Deli</h1>
        <p class="lead large">Small town service. Big city selection.</p>
      {{/if}}
      {{#if notDesktop}}
        {{store-hours}}
        {{cafe-hours}}
        <div class="location">
          <div class="location-item">{{fa-icon "map-marker"}} 3619 Cleveland Highway, Dalton, GA</div>
          <div class="location-item">{{fa-icon "phone"}} (706) 279-9277</div>
        </div>
      {{/if}}
      <a href="https://www.facebook.com/thebutchersmarket" class="btn btn-secondary">Like us on Facebook</a>
      {{#if isDesktop}}
        {{store-hours}}
        {{cafe-hours}}
        <div class="location">
          <div class="location-item">{{fa-icon "map-marker"}} 3619 Cleveland Highway, Dalton, GA</div>
          <div class="location-item">{{fa-icon "phone"}} (706) 279-9277</div>
        </div>
      {{/if}}
    </div>
    {{#if isDesktop}}
      <div class="col-lg-6">
        {{#iphone-carousel}}
          <img src="images/iPhone-loyalty-club-1.jpg" alt="Loyalty Club punch card">
          <img src="images/iPhone-loyalty-club-2.jpg" alt="Loyalty Club discount">
          <img src="images/iPhone-mobile-app.jpg" alt="Butchers Market mobile app">
        {{/iphone-carousel}}
      </div>
    {{/if}}
    {{#if notDesktop}}
      <div class="col-lg-6">
        <ul class="list-inline mobile-app-downloads">
          <li class="list-inline-item">
            <a href="#">
              <img src="images/app-store.png" alt="iOS app store" width="150px" height="45px">
            </a>
          </li>
          <li class="list-inline-item">
            <a href="#">
              <img src="images/google-play.png" alt="Android app" width="150px" height="45px">
            </a>
          </li>
        </ul>
      </div>
    {{/if}}
  </div>
{{/promo-section}}

<div class="container">
  {{header-title title="Featured Specials"}}
  <div class="row">
    {{#each featuredBundles as |bundle|}}
      <div class="col-sm-6 col-lg-3 feature-item">
        {{bundle-list-item product=bundle}}
      </div>
    {{/each}}
    <div class="col-sm-6 col-lg-3 feature-item">
      <h5 class="feature-title">
        {{#link-to "meat" (query-params packages=true) class="btn btn-secondary"}}
          View All Packages
        {{/link-to}}
      </h5>
      <p class="feature-item-description">We have a meat or grocery packages for every need and budget!</p>
    </div>
  </div>
</div>

<section>
  <div class="container">
    {{header-title title="Who We Are"}}
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <h3 class="color-primary">Each interaction is unique.</h3>
        <p class="lead">Every customer is an individual and deserves service catered to their exact needs.</p>
        <p>We come to work everyday to supply that type of service &amp; and to be a part of our customer's lives for years to come!</p>
        <ul>
          <li>Custom cut meats</li>
          <li>Custom packaging</li>
          <li>Custom service</li>
        </ul>
      </div>
    </div>
  </div>
</section>

{{products-list title="Our Meat Products" products=model.products}}

{{reviews-list title="Customer Reviews" reviews=model.reviews}}

{{newsletter-form}}

{{contact-section}}
