{{#promo-section class="butcher-promo-cafe"}}
  <div class="row clearfix">
    <div class="col-lg-6">
      {{#if isDesktop}}
        <h1 class="promo-title">Welcome to The Blues Street Cafe</h1>
        <p class="lead large">Finger Lickin'. Guitar Pickin'.</p>
      {{/if}}
      {{#if notDesktop}}
        {{cafe-hours}}
        {{store-hours}}
        {{store-location}}
      {{/if}}
      <a href="https://www.facebook.com/thebutchersmarket" class="btn btn-secondary">Like us on Facebook</a>
      {{#if isDesktop}}
        {{cafe-hours}}
        {{store-hours}}
        {{store-location}}
      {{/if}}
    </div>
    {{#if isDesktop}}
      <div class="col-lg-6">
        {{#iphone-carousel}}
          <img src="images/iPhone-loyalty-club-3.jpg" alt="Loyalty Club punch card">
          <img src="images/iPhone-loyalty-club-2.jpg" alt="Loyalty Club discount">
          <img src="images/iPhone-mobile-app.jpg" alt="Butchers Market mobile app">
        {{/iphone-carousel}}
      </div>
    {{/if}}
    {{#if notDesktop}}
      <div class="col-lg-6">
        <ul class="list-inline mobile-app-downloads">
          <li class="list-inline-item">
            <a href="#">
              <img src="images/app-store.png" alt="iOS app store" width="150px" height="45px">
            </a>
          </li>
          <li class="list-inline-item">
            <a href="#">
              <img src="images/google-play.png" alt="Android app" width="150px" height="45px">
            </a>
          </li>
        </ul>
      </div>
    {{/if}}
  </div>
{{/promo-section}}


{{#scroll-to-section shouldScroll=events selector="#events"}}
  <div id="events" class="events">
    <div class="container">
      {{header-title title="Events"}}

      {{event-list events=model.events}}
    </div>
  </div>
{{/scroll-to-section}}

