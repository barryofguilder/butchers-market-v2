        {{responsive-video url="https://www.youtube.com/embed/8cfi5r_7qps"}}
      </div>
      <div class="col-sm-6 col-md-4">
        <a href="https://www.youtube.com/playlist?list=PLaUocYlB3j2hIoFGQDlkAwtAE7KcxzhFV" class="btn btn-secondary">
          More Videos
        </a>
      </div>
    </div>
  </div>
</section>

